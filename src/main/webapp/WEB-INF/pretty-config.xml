<pretty-config xmlns="http://ocpsoft.com/prettyfaces/3.2.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://ocpsoft.com/prettyfaces/3.2.0 http://ocpsoft.com/xml/ns/prettyfaces/ocpsoft-pretty-faces-3.2.0.xsd">

	<rewrite match="^/(.*)/$" substitute="/$1" redirect="301" />

	<url-mapping id="index">
		<pattern value="/" />
		<view-id value="/index.jsf" />
	</url-mapping>

	<url-mapping id="login">
		<pattern value="/login" />
		<view-id value="/signin.jsf" />
	</url-mapping>

<!-- 	<url-mapping id="logout"> -->
<!-- 		<pattern value="/logout" /> -->
<!-- 		<view-id value="/logout.jsf" /> -->
<!-- 	</url-mapping> -->

	<url-mapping id="logout">
		<pattern value="/logout" />
		<view-id value="/logout.jsf" />
<!-- 		<action>#{signInController.logout}</action> -->
		<action>#{securityContext.logout}</action>
<!-- 		<action>#{x.x}</action> -->
	</url-mapping>

	<url-mapping id="signup">
		<pattern value="/signup" />
		<view-id value="/signup.jsf" />
	</url-mapping>

	<url-mapping id="user-public-home">
		<pattern value="/user/#{id}" />
		<view-id value="/user-profile.jsf" />
	</url-mapping>

	<url-mapping id="application-dashboard">
		<pattern value="/app/#{id}" />
		<view-id value="/application-dashboard.jsf" />
	</url-mapping>
</pretty-config>